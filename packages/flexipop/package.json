  "version": "0.2.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/flexipop.cjs",
  "module": "./dist/flexipop.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/flexipop.js",
      "require": "./dist/flexipop.cjs"
    },
